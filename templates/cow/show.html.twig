{% include 'base.html.twig' %}

<body>
	<div class="container mt-5">
		<h1>Cow</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ cow.id }}</td>
				</tr>
				<tr>
					<th>MilkProduction</th>
					<td>{{ cow.milkProduction }}</td>
				</tr>
				<tr>
					<th>WeeklyFeed</th>
					<td>{{ cow.weeklyFeed }}</td>
				</tr>
				<tr>
					<th>Weight</th>
					<td>{{ cow.weight }}</td>
				</tr>
				<tr>
					<th>Birth</th>
					<td>{{ cow.birth ? cow.birth|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Slaughtered</th>
					<td>{{ cow.Slaughtered ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="container mb-3">
			<a href="{{ path('app_cow_index') }}" class="btn btn-primary">back to list</a>

			<a href="{{ path('app_cow_edit', {'id': cow.id}) }}" class="btn btn-secondary">edit</a>

			<div style="margin-top: 20px;">
				{{ include('cow/_delete_form.html.twig') }}
			</div>

		</div>
	</div>
</body>
